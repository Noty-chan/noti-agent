# Noty local first-run profile (без Docker)
# Обязательный минимум: VK + LLM + SQLite

# VK
VK_TOKEN=
VK_GROUP_ID=
VK_API_VERSION=5.199
VK_CONFIRMATION_TOKEN=

# LLM / OpenRouter
OPENROUTER_API_KEY=

# SQLite
SQLITE_PATH=./noty/data/noty.db

# Mem0 / Qdrant (условно-обязательные; можно отключить на первом запуске)
MEM0_ENABLED=false
MEM0_API_KEY=
QDRANT_URL=
QDRANT_API_KEY=

# Telegram (опционально)
TELEGRAM_BOT_TOKEN=

# Local config panel auth (для L2)
LOCAL_PANEL_PASSWORD=change-me
